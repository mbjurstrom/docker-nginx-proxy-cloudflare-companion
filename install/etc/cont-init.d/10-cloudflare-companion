### Sanity Test
  if [ -z ${CF_EMAIL} ] ; then printf "** [cloudflare-companion] ERROR: CF_EMAIL is not set!\n"; exit 1; fi;
  if [ -z ${CF_TOKEN} ] ; then printf "** [cloudflare-companion] ERROR: CF_TOKEN is not set!\n"; exit 1; fi;
